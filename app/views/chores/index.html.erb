<p id="notice"><%= notice %></p>

<h1>Chores</h1>

<table>
  <thead>
    <tr>
      <th>Spiffy task</th>
      <th>Evidence</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chores.each do |chore| %>
      <tr>
        <td><%= chore.spiffy_task %></td>
        <td><%= chore.evidence %></td>
        <td><%= chore.status %></td>
        <td><%= chore.user %></td>
        <td><%= link_to 'Show', chore %></td>
        <td><%= link_to 'Edit', edit_chore_path(chore) %></td>
        <td><%= link_to 'Destroy', chore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chore', new_chore_path %>
