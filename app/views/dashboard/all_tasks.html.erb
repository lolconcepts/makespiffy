<div class="container">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
          <div class="brand text-center">
            <h1>Listing of Spiffy Tasks</h1>
          </div>
        <div class="container-fluid">
	    	<div class="col">
			    <table class="table table-sm table-dark table-bordered">
					<thead>
						<tr>
							<td>Task</td>
							<td>Value</td>
						</tr>
					</thead>
						<% @tasks.each do |task| %>
							<tr>
								<td>
									<%= task.name %>
								</td>
								<td>
									<%= task.value %>
								</td>
							</tr>
						<% end %>
				</table>
	    	</div>
		</div>
</div>

 
