
<div class="container">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
          <div class="brand text-center">
            <h1>Listing of Users</h1>
          </div>
        <div class="container-fluid">
	    	<div class="col">
			    <table class="table table-sm table-dark table-bordered">
					<thead>
						<tr>
							<td></td>
							<td>Name</td>
						</tr>
					</thead>
						<% @users.each do |user| %>
							<tr>
								<td>
									<%= link_to 'Make Admin', adminify_path(:id => user.id) if !user.admin %>
								</td>
								<td>
									<% user.fullname %>
									
									<% if user.admin %>
										<span class="badge badge-primary">Administrator</span>
									<% else %>
										<span class="badge badge-warning">Kid</span>
									<% end %>
								</td>
							</tr>
						<% end %>
				</table>
	    	</div>
		</div>
</div>

 
