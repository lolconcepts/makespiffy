<div class="h4">Assign. Verify. Reward.</div>
<p>
	<% if current_user && current_user.admin %>
		<div class="h4">Welcome Parent</div>	
	<% end %>
	<% if current_user && current_user.admin && @waiting > 0 %>
		<span>You have <%= link_to @waiting, chores_url %> chores to review.</span>
	<% end %>
</p>
<div class="container-fluid">
	<% if current_user && !current_user.admin %>
	<div class="row">
		<div class="col">
			<div class="card" style="width: 18rem;">
	 		 
	  				<div class="card-body">
	    				<h5 class="card-title">Your Bank</h5>
	    				<p class="card-text">You have a value of <span class="h4"><%= current_user.bank if current_user %></span>
	    				 in your bank! Click below to request a cash-out!</p>
	    				 <% if current_user.bank == 0 %>
	    				 	<a href="#" class="btn btn-success disabled">Cash In</a>
	    				 <% else %>
	    				 	<a href="#" class="btn btn-success">Cash In</a>
	    				 <% end %>
	    				
	  				</div>
			</div>
		</div>
		<% end %>

		<div class="container-fluid">
		<div class="col">
			<% if @completed_today %>
			<div class="h4">You completed these chores today</div>
			<ul>
				<% @completed_today.each do |c| %>
					<li><%= c.spiffy_task.name %></li>		
				<% end %>
			</ul>
			<% else %>
			<% end %>
		</div>
	</div>
	</div>
</div>
