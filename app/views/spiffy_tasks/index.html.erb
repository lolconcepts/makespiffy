<div class="container">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
          <div class="brand text-center">
            <h1>Spiffy Tasks</h1>
            <h3 class="title text-center">Listing Repeatable Tasks.</h3>
          </div>
        </div>

<table class="table table-sm table-dark">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spiffy_tasks.each do |spiffy_task| %>
      <tr>
        <td><%= spiffy_task.name %></td>

        <td><%= link_to 'Pickup Task', new_chore_path(:spid => spiffy_task.id) if !current_user.admin %></td>
        <td><%= link_to 'Edit', edit_spiffy_task_path(spiffy_task) %></td>
        <td><%= link_to 'Delete', spiffy_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Print', print_path(:id => spiffy_task.id) if current_user.admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spiffy Task', new_spiffy_task_path %>

      </div>
    </div>
  </div>
